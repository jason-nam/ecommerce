{
  "name": "ecap",
  "version": "1.0.0",
  "description": "E-Commerce App",
  "scripts": {
    "postinstall": "npm --prefix ./client install ; npm --prefix ./server install",
    "client": "npm start --prefix client",
    "server": "npm start --prefix server",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "create-db": "cd server && node -r dotenv/config setupDatabase",
    "rm-modules": "rm -rf node_modules ; rm -rf ./server/node_modules ; rm -rf ./client/node_modules"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jason-yunjae-nam/ecommerce"
  },
  "keywords": [],
  "author": "Yun Jae Nam, Yun Hye Nam",
  "license": "MIT",
  "dependencies": {
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
